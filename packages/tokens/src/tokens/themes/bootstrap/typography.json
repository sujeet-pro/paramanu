{
  "font": {
    "family": {
      "$type": "fontFamily",
      "sans": {
        "$value": "system-ui, -apple-system, \"Segoe UI\", Roboto, \"Helvetica Neue\", \"Noto Sans\", \"Liberation Sans\", Arial, sans-serif"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": { "$value": "0.75rem" },
      "sm": { "$value": "0.875rem" },
      "md": { "$value": "1rem" },
      "lg": { "$value": "1.25rem" },
      "xl": { "$value": "1.5rem" },
      "2xl": { "$value": "2rem" },
      "3xl": { "$value": "2.5rem" }
    }
  }
}
