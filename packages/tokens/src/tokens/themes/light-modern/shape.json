{
  "radius": {
    "$type": "dimension",
    "sm": { "$value": "6px" },
    "md": { "$value": "8px" },
    "lg": { "$value": "12px" },
    "xl": { "$value": "16px" }
  },
  "shadow": {
    "$type": "shadow",
    "sm": { "$value": "0 1px 3px 0 rgb(0 0 0 / 0.06), 0 1px 2px -1px rgb(0 0 0 / 0.06)" },
    "md": { "$value": "0 4px 8px -2px rgb(0 0 0 / 0.08), 0 2px 4px -2px rgb(0 0 0 / 0.06)" },
    "lg": { "$value": "0 12px 24px -4px rgb(0 0 0 / 0.08), 0 4px 8px -4px rgb(0 0 0 / 0.04)" }
  },
  "transition": {
    "$type": "duration",
    "fast": { "$value": "150ms" },
    "normal": { "$value": "250ms" },
    "slow": { "$value": "350ms" }
  }
}
