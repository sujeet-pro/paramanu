{
  "radius": {
    "$type": "dimension",
    "none": { "$value": "0px" },
    "sm": { "$value": "2px" },
    "md": { "$value": "4px" },
    "lg": { "$value": "6px" },
    "xl": { "$value": "8px" }
  },
  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": "0 1px 2px 0 rgb(0 0 0 / 0.03), 0 1px 6px -1px rgb(0 0 0 / 0.02), 0 2px 4px 0 rgb(0 0 0 / 0.02)"
    },
    "md": {
      "$value": "0 6px 16px 0 rgb(0 0 0 / 0.08), 0 3px 6px -4px rgb(0 0 0 / 0.12), 0 9px 28px 8px rgb(0 0 0 / 0.05)"
    },
    "lg": {
      "$value": "0 6px 16px 0 rgb(0 0 0 / 0.08), 0 3px 6px -4px rgb(0 0 0 / 0.12), 0 9px 28px 8px rgb(0 0 0 / 0.05)"
    }
  }
}
