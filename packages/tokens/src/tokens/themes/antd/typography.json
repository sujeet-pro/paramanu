        "$value": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", sans-serif"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": { "$value": "12px" },
