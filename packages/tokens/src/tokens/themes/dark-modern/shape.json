{
  "radius": {
    "$type": "dimension",
    "sm": { "$value": "6px" },
    "md": { "$value": "8px" },
    "lg": { "$value": "12px" },
    "xl": { "$value": "16px" }
  },
  "shadow": {
    "$type": "shadow",
    "sm": { "$value": "0 1px 2px 0 rgb(0 0 0 / 0.3)" },
    "md": { "$value": "0 4px 6px -1px rgb(0 0 0 / 0.4), 0 2px 4px -2px rgb(0 0 0 / 0.3)" },
    "lg": { "$value": "0 10px 15px -3px rgb(0 0 0 / 0.4), 0 4px 6px -4px rgb(0 0 0 / 0.3)" }
  }
}
